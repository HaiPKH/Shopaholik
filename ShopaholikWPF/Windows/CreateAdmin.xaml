<Window x:Class="ShopaholikWPF.Windows.CreateAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopaholikWPF.Windows"
        mc:Ignorable="d"
        Title="Create New Admin" Height="218" Width="354"
        ResizeMode="NoResize">
    <Grid Margin="0,0,0,-6">
        <Label Content="Username" HorizontalAlignment="Left" Margin="39,47,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="39,115,0,0" VerticalAlignment="Top"/>
        <Label Content="Create new Admin account" Foreground="Red" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAdminName" HorizontalAlignment="Left" Margin="122,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168"/>
        <PasswordBox x:Name="pwdAdmin" HorizontalAlignment="Left" Margin="122,115,0,0" VerticalAlignment="Top" Width="168" Height="26"/>
        <Button x:Name="btnCreate" Content="Create" HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top" Click="btnCreate_Click"/>
    </Grid>
</Window>
